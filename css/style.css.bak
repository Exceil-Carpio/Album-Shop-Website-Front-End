*{
	margin: 0px;
	padding: 0px;
	box sizing: border-box;
		font-family: Monospace, Copperplate, "Times New Roman";
}

body{
	margin-top: auto;
	display: flex;
	flex-direction: column;
	min-height: 100vh;
	
}
nav{
	top: 0;
	width: 100%;
	height: 100px;
	background-color: black;
	line-height: 75px;
	position: absolute;
    white-space: nowrap;
    overflow: hidden;
	z-index: 1;
}

nav .logo{
	position: absolute;
	padding-left: 100px;
}

nav ul{
	float: right;
}

nav ul li{
	padding-top: 15px;
	display: inline-block;
	list-style: none;
}

nav ul li a{
	color: white;
	text-decoration: none;
	font-size: 18px;
	text-transform: uppercase;
	padding: 0px 32px;
}

nav ul li a:hover{
	color: yellow;
}

nav ul li .active{
	color: yellow;
	background-color: #1C1C1C;
	padding-top: 50px;
	padding-bottom: 35px;
}

